<div class="card wan-config-card">
  <div class="card-header">
    <StatusIndicator @status={{@wan.Status}} @statusKey="Enabled"/> {{@wan.Alias}}
  </div>
  <div class="card-body">
    <div class="form-row">
      <label class="form-row-label">Alias</label>
      <div class="form-row-input">
        <Input class="form-control form-control-sm" type="text" @value={{@wan.Alias}} />
      </div>
    </div>
    {{#each @wan.Intf as |iface index|}}
      <Wan::WanmanagerWanInterface @iface={{iface}} @index={{index}} />
    {{/each}}
  </div>
</div>
