{{!--
  Firewall Status Card Template
  
  WHY: Replicates Homeware's firewall card design showing:
  - Status indicator LED
  - Current firewall level
  - Rule counts (when in User mode)
  
  This matches the layout from 008_firewall.lp
--}}
<div class="card" data-test-status-card>
  <div class="card-header">
    <h5 class="card-title mb-0">
      <i class="fas fa-shield-alt me-2"></i>
      Firewall
    </h5>
  </div>
  <div class="card-body">
    {{!-- Status Indicator - like Homeware's LED light --}}
    <div class="d-flex align-items-center mb-3" data-test-firewall-enabled>
      <span class="status-indicator bg-{{this.statusClass}} me-2"></span>
      <span>Firewall {{this.statusText}}</span>
    </div>
    
    {{!-- Firewall Level - like Homeware's "Firewall Level: Medium" --}}
    <p class="mb-2" data-test-current-level>
      <strong>Level:</strong> 
      <span id="Firewall_Level_ID" class="badge bg-{{this.statusClass}}">
        {{this.currentLevel}}
      </span>
    </p>
    
    {{!-- Rule counts - shown only in User mode like Homeware --}}
    {{#if this.isUserMode}}
      <div class="rule-counts" data-test-rule-counts>
        <p class="mb-1">
          <strong>{{this.ipv4RuleCount}}</strong> IPv4 {{this.ipv4RuleLabel}}
        </p>
        <p class="mb-0">
          <strong>{{this.ipv6RuleCount}}</strong> IPv6 {{this.ipv6RuleLabel}}
        </p>
      </div>
    {{/if}}
    
    {{!-- Link to full firewall config --}}
    <div class="mt-3">
      <small class="text-muted">
        Total Chains: {{@firewall.ChainNumberOfEntries}}
      </small>
    </div>
  </div>
</div>

<style>
  .status-indicator {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    display: inline-block;
  }
</style>